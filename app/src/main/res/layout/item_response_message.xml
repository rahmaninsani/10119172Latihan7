<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorGray"
    app:cardCornerRadius="@dimen/dimen12"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/layout_response_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_response_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen8"
            android:maxWidth="@dimen/dimen260"
            android:paddingLeft="@dimen/dimen12"
            android:paddingTop="@dimen/dimen8"
            android:paddingRight="@dimen/dimen12"
            android:text="@string/message"
            android:textColor="@color/black"
            android:textSize="@dimen/font16" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
