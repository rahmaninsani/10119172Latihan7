<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorBlue"
        app:cardCornerRadius="@dimen/dimen12"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dimen8">

        <LinearLayout
            android:id="@+id/layout_my_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_my_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen8"
                android:maxWidth="@dimen/dimen260"
                android:paddingLeft="@dimen/dimen12"
                android:paddingTop="@dimen/dimen8"
                android:paddingRight="@dimen/dimen12"
                android:text="@string/message"
                android:textColor="@color/white"
                android:textSize="@dimen/font16" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>

